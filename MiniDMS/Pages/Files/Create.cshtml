@page
@model MiniDMS.Pages.Files.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FileModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FileModel.FileName" class="control-label"></label>
                <input asp-for="FileModel.FileName" class="form-control" />
                <span asp-validation-for="FileModel.FileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileModel.UploadDate" class="control-label"></label>
                <input asp-for="FileModel.UploadDate" class="form-control" />
                <span asp-validation-for="FileModel.UploadDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileModel.CreateDate" class="control-label"></label>
                <input asp-for="FileModel.CreateDate" class="form-control" />
                <span asp-validation-for="FileModel.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileModel.Version" class="control-label"></label>
                <input asp-for="FileModel.Version" class="form-control" />
                <span asp-validation-for="FileModel.Version" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FileModel.IsFolder" /> @Html.DisplayNameFor(model => model.FileModel.IsFolder)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FileModel.Owner" class="control-label"></label>
                <input asp-for="FileModel.Owner" class="form-control" value="@User.Identity.Name"/>
                <span asp-validation-for="FileModel.Owner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileModel.ParentId" class="control-label"></label>
                <input asp-for="FileModel.ParentId" class="form-control" value="@Model._id"/>
                <span asp-validation-for="FileModel.ParentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileModel.Whitelist" class="control-label"></label>
                <input asp-for="FileModel.Whitelist" class="form-control" />
                <span asp-validation-for="FileModel.Whitelist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="" asp-route-folder="@Model._id" asp-page="/Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
