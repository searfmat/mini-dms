@page
@model MiniDMS.Pages.Files.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileModel[0].FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileModel[0].UploadDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileModel[0].CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileModel[0].Version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileModel[0].IsFolder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileModel[0].Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileModel[0].ParentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileModel[0].Whitelist)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FileModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFolder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Whitelist)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
