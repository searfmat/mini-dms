@page
@model MiniDMS.Pages.Files.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>FileModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FileModel.FileName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileModel.FileName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FileModel.UploadDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileModel.UploadDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FileModel.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileModel.CreateDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FileModel.Version)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileModel.Version)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FileModel.Owner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileModel.Owner)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FileModel.Whitelist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileModel.Whitelist)
        </dd>
    </dl>
</div>
<a href="@Url.Page("Details", "Download", new { Model.FileModel.Id })">Download</a>


@Model.FileModel.AuditRecords.Count
<div class="overflow-auto" style="height: 100px;">
    @foreach (var audit in Model.FileModel.AuditRecords)
    {
        <p>@audit.Event @audit.EventDate @audit.User</p>
    }

</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.FileModel.Id">Edit</a> |
    <a asp-area="" asp-page="/Index" asp-route-folder="@Model.FileModel.ParentId">Back to List</a> |
    <a asp-page="./Delete" asp-route-id="@Model.FileModel.Id">Delete</a>
</div>
