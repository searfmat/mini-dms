@page
@model AddFolderModel

@{
    ViewData["Title"] = "AddFolder";
}

<h1>AddFolder</h1>

<h4>Document</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Document.FileName" class="control-label"></label>
                <input asp-for="Document.FileName" class="form-control" />
                <span asp-validation-for="Document.FileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document.UploadDate" class="control-label"></label>
                <input asp-for="Document.UploadDate" class="form-control" />
                <span asp-validation-for="Document.UploadDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Document.IsFolder" /> @Html.DisplayNameFor(model => model.Document.IsFolder)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Document.Owner" class="control-label"></label>
                <input asp-for="Document.Owner" class="form-control" />
                <span asp-validation-for="Document.Owner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document.ParentId" class="control-label"></label>
                <input asp-for="Document.ParentId" class="form-control" />
                <span asp-validation-for="Document.ParentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
